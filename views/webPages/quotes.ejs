  </footer>

  <script>
  
 // Function to truncate text to a certain number of words
 function truncateText(text, wordLimit) {
      const words = text.split(" ");
      if (words.length > wordLimit) {
        return words.slice(0, wordLimit).join(" ") + "...";
      }
      return text;
    }

    // Apply truncation to all quotes
    document.querySelectorAll('.quote-text').forEach(quoteElement => {
      const originalText = quoteElement.textContent;
      quoteElement.textContent = truncateText(originalText, 20); // Limiting to 20 words
    });

    const searchInput = document.getElementById('searchInput');
    searchInput.addEventListener('input', function () {
      const filter = searchInput.value.toLowerCase();
      const quotes = document.querySelectorAll('.quote-card');
      quotes.forEach(quote => {
        const author = quote.querySelector('.quote-author').textContent.toLowerCase();
        const text = quote.querySelector('.quote-text').textContent.toLowerCase();
        if (author.includes(filter) || text.includes(filter)) {
          quote.style.display = '';
        } else {
          quote.style.display = 'none';
        }
      });
    });
  </script>
</body>

</html>
