      </ul>
    </nav>
  </header>
<br>
  <div class="submit-quote">
    <p>Have a great quote to share?</p>
    <br>
    <a href="/submit-quote">Submit Your Quote</a>
  </div>

  
  <div class="container">
    <h1>Quotes</h1>
     <!-- Add the search input here -->
     <input type="text" id="searchInput" placeholder="Search quotes..." style="width: 100%; padding: 10px; margin-bottom: 20px; border-radius: 5px; border: 1px solid #ccc;">
    <div class="quotes-container">
      <% if (quotes.length > 0) { %>
        <% quotes.forEach(quote => { %>
          <div class="quote-card">
            <p class="quote-text">“<%- quote.quote %>”</p>
            <p class="quote-author">— <%- quote.author %></p>
            <p class="quote-date"><%= new Date(quote.createdAt).toLocaleDateString() %></p>
            <form action="/quotes/<%= quote._id %>" method="get">
              <button type="submit">Show</button>
            </form>
          </div>
        <% }); %>
      <% } else { %>
        <p class="no-quotes-message">No quotes found.</p>
      <% } %>
    </div>
  </div>

 

