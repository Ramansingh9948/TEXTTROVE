<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup Page</title>
  <link rel="icon" type="image/png" href="TextTrove_Final.png">

  <style>
    /* Basic styling for the form */
    body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh; /* Use min-height instead of height */
  margin: 0;
}
a {
  text-decoration: none;
  color: rgb(122, 127, 235);
}
li ul {
  list-style-type: none !important;

}

    .header {
      width: 100%;
      max-width: 1200px;
      background-color: #4a90e2;
      padding: 20px;
      color: #fff;
      text-align: center;
      margin-bottom: 30px;
      border-radius: 0 0 8px 8px;
    }
    .nav-links {
      display: flex;
      justify-content: center;
      list-style-type: none;
      padding: 0;
    }
    .nav-links li {
      margin: 0 15px;
    }
    .nav-links a {
      color: white;
      text-decoration: none;
      font-weight: bold;
    }
    .nav-links a:hover {
      text-decoration: underline;
    }
    .signup-container {
      background-color: #ffffff;
      padding: 2rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      width: 100%;
      max-width: 400px;
    }
    h2 {
      color: #333;
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .form-group {
      margin-bottom: 1rem;
    }
    label {
      display: block;
      margin-bottom: 0.5rem;
      color: #555;
    }
    input[type="text"],
    input[type="email"],
    input[type="password"] {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1rem;
      box-sizing: border-box;
    }
    .form-group input:focus {
      border-color: #4a90e2;
      outline: none;
    }
    .form-group .hint {
      font-size: 0.9rem;
      color: #888;
    }
    .form-group input[type="checkbox"] {
      margin-right: 0.5rem;
    }
    .btn-submit {
      width: 100%;
      padding: 0.75rem;
      background-color: #4a90e2;
      border: none;
      border-radius: 4px;
      color: #ffffff;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .btn-submit:hover {
      background-color: #357ab8;
    }
    .error-message {
      color: red;
      font-size: 0.85rem;
      margin-top: 0.25rem;
    }

    /* Footer */
    footer {
      text-align: center;
      padding: 15px 0;
      background-color: #4a90e2;
      color: #fff;
      margin-top: 30px;
    }
    /* Footer Styles */
    footer {
      background-color: #333;
      color: #f4f4f9;
      padding: 40px 20px;
      font-size: 0.9rem;
    }
  
    .footer-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
    }
  
    .footer-brand, .footer-links, .footer-social, .footer-contact {
      flex: 1;
      min-width: 200px;
      margin-bottom: 20px;
    }
  
    .footer-brand h2, .footer-links h3, .footer-social h3, .footer-contact h3 {
      font-size: 1.2rem;
      margin-bottom: 15px;
      color: #4a90e2;
    }
  
    .footer-brand p {
      color: #bbb;
      line-height: 1.6;
    }
  
    .footer-links ul {
      list-style-type: none;
      padding: 0;
    }
  
    .footer-links li {
      margin-bottom: 10px;
    }
  
    .footer-links a {
      color: #f4f4f9;
      text-decoration: none;
    }
  
    .footer-links a:hover {
      color: #4a90e2;
    }
  
    .social-icons a {
      margin-right: 10px;
    }
  
    .social-icons img {
      width: 24px;
      height: 24px;
      transition: opacity 0.3s;
    }
  
    .social-icons a:hover img {
      opacity: 0.7;
    }
  
    .footer-contact p {
      color: #bbb;
      margin: 5px 0;
    }
  
    .footer-contact a {
      color: #f4f4f9;
      text-decoration: underline;
    }
  
    .footer-bottom {
      text-align: center;
      margin-top: 20px;
      font-size: 0.8rem;
      color: #bbb;
    }
    /* Legal */
    .footer-legal {
      margin-top: 20px;
      font-size: 0.8rem;
      color: #bbb;
    }
  </style>
</head>
<body>

  <header class="header">
    <h1>TextTrove</h1>
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li><a href="/quotes">Quotes</a></li>
      <li><a href="/books">Books</a></li>
      <li><a href="/articles">Articles</a></li>
      <li><a href="/about">About Us</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </header>

  <div class="signup-container">
    <h2>Create an Account</h2>
    <form id="signupForm" method="post" action="/signup">
      <!-- Email Field -->
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
        <div id="emailError" class="error-message"></div>
      </div>
      
      <!-- Full Name Field -->
      <div class="form-group">
        <label for="fullname">Full Name</label>
        <input type="text" id="fullname" name="fullname" required>
      </div>
      
      <!-- Username Field -->
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" minlength="4" required>
        <div class="hint">At least 4 characters</div>
        <div id="usernameError" class="error-message"></div>
      </div>
      
      <!-- Password Field -->
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" minlength="8" required>
        <div class="hint">At least 8 characters</div>
        <div id="passwordError" class="error-message"></div>
      </div>
      
      <!-- Terms and Privacy Checkbox -->
      <div class="form-group">
        <input type="checkbox" id="terms" name="terms" required>
        <label for="terms">I agree to the <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a></label>
      </div>
      
      <!-- Submit Button -->
      <button type="submit" class="btn-submit">Sign Up</button>
    </form>
  </div>
  
  <footer>
    <div class="footer-container">
      <div class="footer-brand">
        <h2>TextTrove</h2>
        <p>Your gateway to knowledge, insights, and inspiration. Explore quotes, books, and articles from a world of creators.</p>
      </div>

      <div class="footer-links">
        <h3>Quick Links</h3>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/quotes">Quotes</a></li>
          <li><a href="/books">Books</a></li>
          <li><a href="/articles">Articles</a></li>
          <li><a href="/about">About Us</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-social">
        <h3>Follow Us</h3>
        <div class="social-icons">
          <a href="https://facebook.com" target="_blank">
            <img src="https://img.icons8.com/ios-filled/24/4a90e2/facebook-new.png" alt="Facebook">
          </a>
          <a href="https://twitter.com" target="_blank">
            <img src="https://img.icons8.com/ios-filled/24/4a90e2/twitter.png" alt="Twitter">
          </a>
          <a href="https://www.linkedin.com/in/raman-singh-417239219/" target="_blank">
            <img src="https://img.icons8.com/ios-filled/24/4a90e2/linkedin.png" alt="LinkedIn">
          </a>
          <a href="https://instagram.com/texttrove_offical" target="_blank">
            <img src="https://img.icons8.com/ios-filled/24/4a90e2/instagram-new.png" alt="Instagram">
          </a>
        </div>
      </div>

      <div class="footer-contact">
        <h3>Contact Us</h3>
        <p>Email: <a href="mailto:admin@texttrove.in">admin@texttrove.in</a></p>
        <p>Phone: +91 964 847 0308</p>
        <p>Address: Kushinagar, Uttar Pradesh, INDIA</p>
      </div>

      <div class="footer-legal">
        <ul>
          <li><a href="/terms">Terms & Conditions</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/cookies">Cookie Policy</a></li>
        </ul>
      </div>

      <p>&copy; <%= new Date().getFullYear() %> TextTrove. All rights reserved.</p>
      <p>Crafted with &hearts; by Raman</p>
    </div>
  </footer>

  <!-- JavaScript for validation -->
  <script>
    document.getElementById("signupForm").addEventListener("submit", function(event) {
      let isValid = true;

      // Clear previous error messages
      document.getElementById("emailError").innerText = "";
      document.getElementById("usernameError").innerText = "";
      document.getElementById("passwordError").innerText = "";

      // Email validation
      const email = document.getElementById("email").value;
      if (!email.includes("@")) {
        document.getElementById("emailError").innerText = "Please enter a valid email.";
        isValid = false;
      }

      // Username validation
      const username = document.getElementById("username").value;
      if (username.length < 4) {
        document.getElementById("usernameError").innerText = "Username must be at least 4 characters.";
        isValid = false;
      }

      // Password validation
      const password = document.getElementById("password").value;
      if (password.length < 8) {
        document.getElementById("passwordError").innerText = "Password must be at least 8 characters.";
        isValid = false;
      }

      // Prevent form submission if invalid
      if (!isValid) {
        event.preventDefault();
      }
    });
  </script>
</body>
</html>
